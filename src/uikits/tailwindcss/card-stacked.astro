---
// https://v1.tailwindcss.com/components/cards

const {data} = Astro.props
---

<div class="h-full max-w-sm rounded overflow-hidden shadow-lg">
  <a href={data.href}>
    <img class="w-full" src={data?.image?.src} alt="Sunset in the mountains">
    <div class="px-6 py-4">
      <div class="font-bold text-xl mb-2">{data?.title}</div>
      <p class="text-gray-700 text-base">
        {data?.subtitle}
      </p>
    </div>
    <div class="px-3 pt-4 pb-2">
      {data.tags?.map(tag=>
          <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-xs text-gray-700 mr-2 mb-2">#{tag}</span>
      )}
    </div>
  </a>
</div>