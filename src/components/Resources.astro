---
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Card from '@ui/tailwindcss/card-stacked.astro'
import {urlForImage} from '@utils/urlForImage'

const {brands} = Astro.props

---

<Container>
  <Sectionhead>
    <Fragment slot="title">Resources</Fragment>
    <Fragment slot="desc">
      Best resources for AI from around the world.
    </Fragment>
  </Sectionhead>
  <main class="mt-16">
    <div class="grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
      {brands.map(brand=>
        <div class="">
          <Card data={{title: brand.title, href: `/resources/${brand.slug.current}`, subtitle: brand.description, tags:brand?.tags?.map(t=>t.title), image: {src: brand.mainImage?urlForImage(brand.mainImage):''}}}/>
        </div>
      )}
    </div>
  </main>
</Container>
