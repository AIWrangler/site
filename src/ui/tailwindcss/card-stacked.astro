---
// https://v1.tailwindcss.com/components/cards

import StarRatingComponent from "react-star-rating-component";
const { data } = Astro.props;
---

<div class="h-full max-w-sm mx-auto rounded-md shadow-lg">
  <a href={data.href}>
    <div class="flex flex-col justify-between h-full pb-3 space-y-3">
      <img
        class="w-full h-48 object-fit"
        src={data?.image?.src}
        alt="Sunset in the mountains"
      />
      <div class="px-6">
        <div class="mb-2 text-xl font-bold">{data?.title}</div>
        <div class="line-clamp-3">
          {data?.subtitle}
        </div>
      </div>
      <div class="flex flex-col px-3">
        <div>
          {data.tags?.map((tag) => <span class="text-gray-700">#{tag}</span>)}
        </div>
        {
          data.stars && (
            <div class="flex justify-end">
              <StarRatingComponent
                name="rate2"
                editing={false}
                starCount={5}
                value={data.stars}
              />
            </div>
          )
        }
      </div>
    </div>
  </a>
</div>
